<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppLayouts.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppLayouts"
    Title="MauiAppLayouts"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Çiçek Sepeti"
        ContentTemplate="{DataTemplate local:AbsoluteLayoutPage}"
        Route="AbsoluteLayoutPage" />
    
    <ShellContent
        Title="LoginPage"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Register Page"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />

    <ShellContent
        Title="Çiçekçi"
        ContentTemplate="{DataTemplate local:NewPage1}"
        Route="NewPage1" />

</Shell>
